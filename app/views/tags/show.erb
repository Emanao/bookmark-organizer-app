<h1>Show Bookmarks for Tag Name : <%=@tag.name%></h1><br></br>
<table style="width:100%">
  <tr>
    <th>Name</th>
    <th>URL</th> 
  </tr>
    <%@tag.bookmarks.each do |bookmark|%>
    <tr>
        <td><a href='/bookmarks/<%=bookmark.id%>'><%=bookmark.name %></a></td>
         <td><a href='<%=bookmark.url%>' target='_blank'> <%=bookmark.url%></a></td>
    </tr>
    <%end%>
</table><br></br>
<form action='/tags/<%=@tag.id%>/edit' method='get'>
    <input type='submit' value='Edit Tag'>
</form>
<form action='/tags/<%=@tag.id%>/delete' method='post'>
<input type='hidden' name='_method' value='delete'>
<input type='submit' value='Delete Tag'>
</form>

